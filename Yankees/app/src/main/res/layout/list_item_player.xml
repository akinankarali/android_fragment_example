<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="8dp"
    >

    <Button
        android:id="@+id/back_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="80dp"
        android:layout_gravity="left"
        android:layout_height="match_parent"
        android:text="Back"
        android:textColor="#132448"
        android:textStyle="bold"
        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="#132448"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Name"
                android:textColor="#132448"
                android:layout_marginEnd="8dp"
                />
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textColor="#132448"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:id="@+id/player_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Age"
                android:textColor="#132448" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:"
                android:textColor="#132448"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:id="@+id/player_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Height"
                android:textColor="#132448"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W:"
                android:textColor="#132448"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:id="@+id/player_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Weight"
                android:textColor="#132448"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:id="@+id/shirtNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No:"
                android:textColor="#132448"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:id="@+id/player_shirtNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Shirt No"
                android:textColor="#132448" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>




